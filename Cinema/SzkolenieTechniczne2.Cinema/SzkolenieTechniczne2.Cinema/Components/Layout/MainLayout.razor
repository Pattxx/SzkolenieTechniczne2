@inherits LayoutComponentBase

<div class="layout d-flex flex-column">
    <div class="d-flex flex-grow-1">
        <aside class="sidebar bg-light p-3">
            <NavMenu />
        </aside>

        <div class="main-area d-flex flex-column flex-grow-1">
            <header class="navbar bg-dark text-white px-4">
                <div class="container-fluid d-flex justify-content-between align-items-center">
                    <h1 class="h3 m-0">🎬 CinemaApp</h1>
                    <a href="/" class="text-white text-decoration-none">Strona główna</a>
                </div>
            </header>

            <main class="content p-4 flex-grow-1">
                @Body
            </main>
        </div>
    </div>
</div>

<div id="blazor-error-ui">
    Wystąpił błąd.
    <a href="" class="reload">Odśwież</a>
    <a class="dismiss">🗙</a>
</div>